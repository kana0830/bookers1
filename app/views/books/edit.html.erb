<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div id="error_explanation">
        <h2>error prohibited this book from being saved:</h2>
        <% @book.errors.full_messages.each do |message| %>
            <ul>
                <li><%= message %></li>
            </ul>
        <% end %>
    </div>
<% end %>
<%= form_for(@book) do |f| %>
<div class="field">
    <label class="book-title">Title</label>
    <%= f.text_field :title %>
</div>
    <div class="field">
    <label class="book-body">Body</label>
    <%= f.text_area :body %>
</div>
<div class="actions">
    <%= f.submit "Update Book" %>
</div>
<% end %>
<div><%= link_to "Show", book_path(@book) %>
| <%= link_to "Back", books_path %></div>
