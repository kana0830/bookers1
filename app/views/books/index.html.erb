<div>
    <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>  
    </div>
    <% end %>
</div>

<h1>Books</h1>
    <table>
        <thead>
            <th><strong>Title</strong></th>
            <th><strong>Body</strong></th>
        </thead>
        <% @books.each do |book| %>
        <tbody>
            <td>
                <%= book.title %>
            </td>
             <td>
                <%= book.body %>
            </td>
            <td>
                <%= link_to "Show", book_path(book) %>    
            </td>
            <td>
                <%= link_to "Edit", edit_book_path(book) %>
            </td>
            <td>
                <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
            </tbody>
        </tr>
        <% end %>
    </table>

<h2>New Book</h2>
<% if @book.errors.any? %>
    <div id="error_explanation">
        <h2>error prohibited this book from being saved:</h2>
        <% @book.errors.full_messages.each do |message| %>
            <ul>
                <li><%= message %></li>
            </ul>
        <% end %>
    </div>
<% end %>
<%= form_for(@book) do |f| %>
<div class="field">
    <label class="book-title">Title</label>
    <%= f.text_field :title %>
</div>
    <div class="field">
    <label class="book-body">Body</label>
    <%= f.text_area :body %>
</div>
<div class="actions">
    <%= f.submit "Create Book" %>
</div>
<% end %>
